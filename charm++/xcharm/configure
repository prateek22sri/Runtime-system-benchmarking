#!/bin/bash

echo \#This file is generated by XCharm configure script > config.mk

if test -d $CHARM_HOME ; then
	echo 'CHARM_HOME='$CHARM_HOME >> config.mk
else
	echo Error: set CHARM_HOME variable
fi

if test -e $CHARM_HOME/bin/charmc ; then
	echo 'CHARMC='$CHARM_HOME/bin/charmc >> config.mk
else
	echo Error: charmc is not found in $CHARM_HOME/bin
fi

if test -d $BOOST_ROOT ; then
	echo 'BOOST_ROOT='$BOOST_ROOT >> config.mk
else
	echo Error: set BOOST_ROOT variable
fi
